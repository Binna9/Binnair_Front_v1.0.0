{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "types": ["react", "node", "styled-components"], // ✅ styled-components 타입 추가
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./",
    "moduleResolution": "node", // ✅ bundler → node 변경 (styled-components 찾도록 수정)
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "src/components/cart/.tsx"],
  "exclude": ["node_modules", "dist"]
}
